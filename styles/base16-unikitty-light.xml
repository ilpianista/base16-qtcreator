<?xml version="1.0" encoding="UTF-8"?>
<style-scheme version="1.0" name="Base16 Unikitty Light">
  <!--
  base16-qtcreator (https://github.com/ilpianista/base16-qtcreator)
  by Chris Kempson (http://chriskempson.com)
  Unikitty Light scheme by Josh W Lewis (@joshwlewis)
  -->

  <!-- main colors, skipping one of attributes (backgroud/foreground) will use color from here -->
  <style name="Text" foreground="#6c696e" background="#ffffff"/>

  <!-- it will be underlined by default -->
  <style name="Link"/>

  <!-- selection, current line, search, matching brackets -->
  <style name="Selection" background="#89878b"/>
  <style name="CurrentLine" background="#a7a5a8"/>
  <style name="LineNumber" foreground="#a7a5a8"/>
  <style name="CurrentLineNumber" foreground="#89878b" bold="true"/>
  <style name="SearchResult" background="#e1e1e2"/>
  <style name="Parentheses" background="#c4c3c5" />
  <style name="ParenthesesMismatch" background="#aa17e6" />

  <!-- Selection whilst searching in it -->
  <style name="SearchScope" foreground="#322d34" background="#a7a5a8"/>

  <!-- word (symbol) under cursor: background - color of marking frame, foreground - ignored -->
  <style name="Occurrences" background="#a7a5a8"/>
  <style name="Occurrences.Rename" background="#89878b"/>
  <!-- unused variable: foreground - color of underlining -->
  <style name="Occurrences.Unused" foreground="#d65407"/>

  <!-- language primitives -->
  <style name="Number" foreground="#d65407"/>
  <style name="String" foreground="#17ad98"/>
  <style name="Keyword" foreground="#aa17e6"/>
  <style name="Operator" foreground="#6c696e"/>
  <style name="Preprocessor" foreground="#775dff"/>
  <style name="Label" foreground="#d8137f"/>

  <!-- types, classes -->
  <style name="Type" foreground="#dc8a0e"/>
  <style name="PrimitiveType" foreground="#aa17e6"/>

  <!-- functions, methods -->
  <style name="Function" foreground="#775dff"/>
  <style name="VirtualMethod" foreground="#775dff" italic="true"/>

  <!-- variables -->
  <style name="Field" foreground="#4f4b51"/>
  <style name="Local" foreground="#6c696e"/>
  <style name="Global" foreground="#6c696e"/>
  <style name="Static" foreground="#6c696e"/>
  <style name="JsScopeVar" foreground="#6c696e" italic="true"/>
  <style name="JsImportVar" foreground="#6c696e" italic="true"/>
  <style name="JsGlobalVar" foreground="#6c696e" italic="true"/>

  <!-- whitespace -->
  <style name="VisualWhitespace" foreground="#c4c3c5"/>

  <!-- comments -->
  <style name="Comment" foreground="#a7a5a8"/>
  <style name="DisabledCode" foreground="#a7a5a8"/>
  <style name="Doxygen.Comment" foreground="#a7a5a8"/>
  <style name="Doxygen.Tag" foreground="#a7a5a8"/>

  <!-- QML -->
  <style name="QmlTypeId" foreground="#aa17e6"/>
  <style name="Binding" foreground="#d8137f"/>
  <style name="QmlExternalId" foreground="#775dff" italic="true"/>
  <style name="QmlExternalObjectProperty" foreground="#775dff" italic="true"/>
  <style name="QmlLocalId" italic="true"/>
  <style name="QmlRootObjectProperty" italic="true"/>
  <style name="QmlScopeObjectProperty" italic="true"/>
  <style name="QmlStateName" italic="true"/>

  <!-- inline diff -->
  <style name="DiffFile" foreground="#aa17e6"/>
  <style name="DiffLocation" foreground="#775dff"/>
  <style name="AddedLine" foreground="#17ad98"/>
  <style name="RemovedLine" foreground="#dc8a0e"/>
  <style name="LogChangeLine" foreground="#d8137f"/>

  <!-- side-by-side diff -->
  <style name="DiffFileLine" foreground="#aa17e6"/>
  <style name="DiffContextLine" foreground="#775dff"/>
  <style name="DiffSourceLine" foreground="#17ad98"/>
  <style name="DiffSourceChar" foreground="#dc8a0e" background="#e1e1e2"/>
  <style name="DiffDestLine" foreground="#17ad98"/>
  <style name="DiffDestChar" foreground="#dc8a0e" background="#e1e1e2"/>

  <!-- errors, warnings -->
  <style name="Error" underlineColor="#d8137f" underlineStyle="SingleUnderline"/>
  <style name="ErrorContext" underlineColor="#d8137f" underlineStyle="DotLine"/>
  <style name="Warning" underlineColor="#dc8a0e" underlineStyle="SingleUnderline"/>
  <style name="WarningContext" underlineColor="#dc8a0e" underlineStyle="DotLine"/>
</style-scheme>
