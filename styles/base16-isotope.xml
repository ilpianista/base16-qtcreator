<?xml version="1.0" encoding="UTF-8"?>
<style-scheme version="1.0" name="Base16 Isotope">
  <!--
  base16-qtcreator (https://github.com/ilpianista/base16-qtcreator)
  by Chris Kempson (http://chriskempson.com)
  Isotope scheme by Jan T. Sott
  -->

  <!-- main colors, skipping one of attributes (backgroud/foreground) will use color from here -->
  <style name="Text" foreground="#d0d0d0" background="#000000"/>

  <!-- it will be underlined by default -->
  <style name="Link"/>

  <!-- selection, current line, search, matching brackets -->
  <style name="Selection" background="#c0c0c0"/>
  <style name="CurrentLine" background="#808080"/>
  <style name="LineNumber" foreground="#808080"/>
  <style name="CurrentLineNumber" foreground="#c0c0c0" bold="true"/>
  <style name="SearchResult" background="#404040"/>
  <style name="Parentheses" background="#606060" />
  <style name="ParenthesesMismatch" background="#cc00ff" />

  <!-- Selection whilst searching in it -->
  <style name="SearchScope" foreground="#ffffff" background="#808080"/>

  <!-- word (symbol) under cursor: background - color of marking frame, foreground - ignored -->
  <style name="Occurrences" background="#808080"/>
  <style name="Occurrences.Rename" background="#c0c0c0"/>
  <!-- unused variable: foreground - color of underlining -->
  <style name="Occurrences.Unused" foreground="#ff9900"/>

  <!-- language primitives -->
  <style name="Number" foreground="#ff9900"/>
  <style name="String" foreground="#33ff00"/>
  <style name="Keyword" foreground="#cc00ff"/>
  <style name="Operator" foreground="#d0d0d0"/>
  <style name="Preprocessor" foreground="#0066ff"/>
  <style name="Label" foreground="#ff0000"/>

  <!-- types, classes -->
  <style name="Type" foreground="#ff0099"/>
  <style name="PrimitiveType" foreground="#cc00ff"/>

  <!-- functions, methods -->
  <style name="Function" foreground="#0066ff"/>
  <style name="VirtualMethod" foreground="#0066ff" italic="true"/>

  <!-- variables -->
  <style name="Field" foreground="#e0e0e0"/>
  <style name="Local" foreground="#d0d0d0"/>
  <style name="Global" foreground="#d0d0d0"/>
  <style name="Static" foreground="#d0d0d0"/>
  <style name="JsScopeVar" foreground="#d0d0d0" italic="true"/>
  <style name="JsImportVar" foreground="#d0d0d0" italic="true"/>
  <style name="JsGlobalVar" foreground="#d0d0d0" italic="true"/>

  <!-- whitespace -->
  <style name="VisualWhitespace" foreground="#606060"/>

  <!-- comments -->
  <style name="Comment" foreground="#808080"/>
  <style name="DisabledCode" foreground="#808080"/>
  <style name="Doxygen.Comment" foreground="#808080"/>
  <style name="Doxygen.Tag" foreground="#808080"/>

  <!-- QML -->
  <style name="QmlTypeId" foreground="#cc00ff"/>
  <style name="Binding" foreground="#ff0000"/>
  <style name="QmlExternalId" foreground="#0066ff" italic="true"/>
  <style name="QmlExternalObjectProperty" foreground="#0066ff" italic="true"/>
  <style name="QmlLocalId" italic="true"/>
  <style name="QmlRootObjectProperty" italic="true"/>
  <style name="QmlScopeObjectProperty" italic="true"/>
  <style name="QmlStateName" italic="true"/>

  <!-- inline diff -->
  <style name="DiffFile" foreground="#cc00ff"/>
  <style name="DiffLocation" foreground="#0066ff"/>
  <style name="AddedLine" foreground="#33ff00"/>
  <style name="RemovedLine" foreground="#ff0099"/>
  <style name="LogChangeLine" foreground="#ff0000"/>

  <!-- side-by-side diff -->
  <style name="DiffFileLine" foreground="#cc00ff"/>
  <style name="DiffContextLine" foreground="#0066ff"/>
  <style name="DiffSourceLine" foreground="#33ff00"/>
  <style name="DiffSourceChar" foreground="#ff0099" background="#404040"/>
  <style name="DiffDestLine" foreground="#33ff00"/>
  <style name="DiffDestChar" foreground="#ff0099" background="#404040"/>

  <!-- errors, warnings -->
  <style name="Error" underlineColor="#ff0000" underlineStyle="SingleUnderline"/>
  <style name="ErrorContext" underlineColor="#ff0000" underlineStyle="DotLine"/>
  <style name="Warning" underlineColor="#ff0099" underlineStyle="SingleUnderline"/>
  <style name="WarningContext" underlineColor="#ff0099" underlineStyle="DotLine"/>
</style-scheme>
