<?xml version="1.0" encoding="UTF-8"?>
<style-scheme version="1.0" name="Base16 Bright">
  <!--
  base16-qtcreator (https://github.com/ilpianista/base16-qtcreator)
  by Chris Kempson (http://chriskempson.com)
  Bright scheme by Chris Kempson (http://chriskempson.com)
  -->

  <!-- main colors, skipping one of attributes (backgroud/foreground) will use color from here -->
  <style name="Text" foreground="#e0e0e0" background="#000000"/>

  <!-- it will be underlined by default -->
  <style name="Link"/>

  <!-- selection, current line, search, matching brackets -->
  <style name="Selection" background="#d0d0d0"/>
  <style name="CurrentLine" background="#b0b0b0"/>
  <style name="LineNumber" foreground="#b0b0b0"/>
  <style name="CurrentLineNumber" foreground="#d0d0d0" bold="true"/>
  <style name="SearchResult" background="#303030"/>
  <style name="Parentheses" background="#505050" />
  <style name="ParenthesesMismatch" background="#d381c3" />

  <!-- Selection whilst searching in it -->
  <style name="SearchScope" foreground="#ffffff" background="#b0b0b0"/>

  <!-- word (symbol) under cursor: background - color of marking frame, foreground - ignored -->
  <style name="Occurrences" background="#b0b0b0"/>
  <style name="Occurrences.Rename" background="#d0d0d0"/>
  <!-- unused variable: foreground - color of underlining -->
  <style name="Occurrences.Unused" foreground="#fc6d24"/>

  <!-- language primitives -->
  <style name="Number" foreground="#fc6d24"/>
  <style name="String" foreground="#a1c659"/>
  <style name="Keyword" foreground="#d381c3"/>
  <style name="Operator" foreground="#e0e0e0"/>
  <style name="Preprocessor" foreground="#6fb3d2"/>
  <style name="Label" foreground="#fb0120"/>

  <!-- types, classes -->
  <style name="Type" foreground="#fda331"/>
  <style name="PrimitiveType" foreground="#d381c3"/>

  <!-- functions, methods -->
  <style name="Function" foreground="#6fb3d2"/>
  <style name="VirtualMethod" foreground="#6fb3d2" italic="true"/>

  <!-- variables -->
  <style name="Field" foreground="#f5f5f5"/>
  <style name="Local" foreground="#e0e0e0"/>
  <style name="Global" foreground="#e0e0e0"/>
  <style name="Static" foreground="#e0e0e0"/>
  <style name="JsScopeVar" foreground="#e0e0e0" italic="true"/>
  <style name="JsImportVar" foreground="#e0e0e0" italic="true"/>
  <style name="JsGlobalVar" foreground="#e0e0e0" italic="true"/>

  <!-- whitespace -->
  <style name="VisualWhitespace" foreground="#505050"/>

  <!-- comments -->
  <style name="Comment" foreground="#b0b0b0"/>
  <style name="DisabledCode" foreground="#b0b0b0"/>
  <style name="Doxygen.Comment" foreground="#b0b0b0"/>
  <style name="Doxygen.Tag" foreground="#b0b0b0"/>

  <!-- QML -->
  <style name="QmlTypeId" foreground="#d381c3"/>
  <style name="Binding" foreground="#fb0120"/>
  <style name="QmlExternalId" foreground="#6fb3d2" italic="true"/>
  <style name="QmlExternalObjectProperty" foreground="#6fb3d2" italic="true"/>
  <style name="QmlLocalId" italic="true"/>
  <style name="QmlRootObjectProperty" italic="true"/>
  <style name="QmlScopeObjectProperty" italic="true"/>
  <style name="QmlStateName" italic="true"/>

  <!-- inline diff -->
  <style name="DiffFile" foreground="#d381c3"/>
  <style name="DiffLocation" foreground="#6fb3d2"/>
  <style name="AddedLine" foreground="#a1c659"/>
  <style name="RemovedLine" foreground="#fda331"/>
  <style name="LogChangeLine" foreground="#fb0120"/>

  <!-- side-by-side diff -->
  <style name="DiffFileLine" foreground="#d381c3"/>
  <style name="DiffContextLine" foreground="#6fb3d2"/>
  <style name="DiffSourceLine" foreground="#a1c659"/>
  <style name="DiffSourceChar" foreground="#fda331" background="#303030"/>
  <style name="DiffDestLine" foreground="#a1c659"/>
  <style name="DiffDestChar" foreground="#fda331" background="#303030"/>

  <!-- errors, warnings -->
  <style name="Error" underlineColor="#fb0120" underlineStyle="SingleUnderline"/>
  <style name="ErrorContext" underlineColor="#fb0120" underlineStyle="DotLine"/>
  <style name="Warning" underlineColor="#fda331" underlineStyle="SingleUnderline"/>
  <style name="WarningContext" underlineColor="#fda331" underlineStyle="DotLine"/>
</style-scheme>
