<?xml version="1.0" encoding="UTF-8"?>
<style-scheme version="1.0" name="Base16 Solar Flare">
  <!--
  base16-qtcreator (https://github.com/ilpianista/base16-qtcreator)
  by Chris Kempson (http://chriskempson.com)
  Solar Flare scheme by Chuck Harmston (https://chuck.harmston.ch)
  -->

  <!-- main colors, skipping one of attributes (backgroud/foreground) will use color from here -->
  <style name="Text" foreground="#A6AFB8" background="#18262F"/>

  <!-- it will be underlined by default -->
  <style name="Link"/>

  <!-- selection, current line, search, matching brackets -->
  <style name="Selection" background="#85939E"/>
  <style name="CurrentLine" background="#667581"/>
  <style name="LineNumber" foreground="#667581"/>
  <style name="CurrentLineNumber" foreground="#85939E" bold="true"/>
  <style name="SearchResult" background="#222E38"/>
  <style name="Parentheses" background="#586875" />
  <style name="ParenthesesMismatch" background="#A363D5" />

  <!-- Selection whilst searching in it -->
  <style name="SearchScope" foreground="#F5F7FA" background="#667581"/>

  <!-- word (symbol) under cursor: background - color of marking frame, foreground - ignored -->
  <style name="Occurrences" background="#667581"/>
  <style name="Occurrences.Rename" background="#85939E"/>
  <!-- unused variable: foreground - color of underlining -->
  <style name="Occurrences.Unused" foreground="#E66B2B"/>

  <!-- language primitives -->
  <style name="Number" foreground="#E66B2B"/>
  <style name="String" foreground="#7CC844"/>
  <style name="Keyword" foreground="#A363D5"/>
  <style name="Operator" foreground="#A6AFB8"/>
  <style name="Preprocessor" foreground="#33B5E1"/>
  <style name="Label" foreground="#EF5253"/>

  <!-- types, classes -->
  <style name="Type" foreground="#E4B51C"/>
  <style name="PrimitiveType" foreground="#A363D5"/>

  <!-- functions, methods -->
  <style name="Function" foreground="#33B5E1"/>
  <style name="VirtualMethod" foreground="#33B5E1" italic="true"/>

  <!-- variables -->
  <style name="Field" foreground="#E8E9ED"/>
  <style name="Local" foreground="#A6AFB8"/>
  <style name="Global" foreground="#A6AFB8"/>
  <style name="Static" foreground="#A6AFB8"/>
  <style name="JsScopeVar" foreground="#A6AFB8" italic="true"/>
  <style name="JsImportVar" foreground="#A6AFB8" italic="true"/>
  <style name="JsGlobalVar" foreground="#A6AFB8" italic="true"/>

  <!-- whitespace -->
  <style name="VisualWhitespace" foreground="#586875"/>

  <!-- comments -->
  <style name="Comment" foreground="#667581"/>
  <style name="DisabledCode" foreground="#667581"/>
  <style name="Doxygen.Comment" foreground="#667581"/>
  <style name="Doxygen.Tag" foreground="#667581"/>

  <!-- QML -->
  <style name="QmlTypeId" foreground="#A363D5"/>
  <style name="Binding" foreground="#EF5253"/>
  <style name="QmlExternalId" foreground="#33B5E1" italic="true"/>
  <style name="QmlExternalObjectProperty" foreground="#33B5E1" italic="true"/>
  <style name="QmlLocalId" italic="true"/>
  <style name="QmlRootObjectProperty" italic="true"/>
  <style name="QmlScopeObjectProperty" italic="true"/>
  <style name="QmlStateName" italic="true"/>

  <!-- inline diff -->
  <style name="DiffFile" foreground="#A363D5"/>
  <style name="DiffLocation" foreground="#33B5E1"/>
  <style name="AddedLine" foreground="#7CC844"/>
  <style name="RemovedLine" foreground="#E4B51C"/>
  <style name="LogChangeLine" foreground="#EF5253"/>

  <!-- side-by-side diff -->
  <style name="DiffFileLine" foreground="#A363D5"/>
  <style name="DiffContextLine" foreground="#33B5E1"/>
  <style name="DiffSourceLine" foreground="#7CC844"/>
  <style name="DiffSourceChar" foreground="#E4B51C" background="#222E38"/>
  <style name="DiffDestLine" foreground="#7CC844"/>
  <style name="DiffDestChar" foreground="#E4B51C" background="#222E38"/>

  <!-- errors, warnings -->
  <style name="Error" underlineColor="#EF5253" underlineStyle="SingleUnderline"/>
  <style name="ErrorContext" underlineColor="#EF5253" underlineStyle="DotLine"/>
  <style name="Warning" underlineColor="#E4B51C" underlineStyle="SingleUnderline"/>
  <style name="WarningContext" underlineColor="#E4B51C" underlineStyle="DotLine"/>
</style-scheme>
