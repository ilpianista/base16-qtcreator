<?xml version="1.0" encoding="UTF-8"?>
<style-scheme version="1.0" name="Base16 Codeschool">
  <!--
  base16-qtcreator (https://github.com/ilpianista/base16-qtcreator)
  by Chris Kempson (http://chriskempson.com)
  Codeschool scheme by brettof86
  -->

  <!-- main colors, skipping one of attributes (backgroud/foreground) will use color from here -->
  <style name="Text" foreground="#9ea7a6" background="#232c31"/>

  <!-- it will be underlined by default -->
  <style name="Link"/>

  <!-- selection, current line, search, matching brackets -->
  <style name="Selection" background="#84898c"/>
  <style name="CurrentLine" background="#3f4944"/>
  <style name="LineNumber" foreground="#3f4944"/>
  <style name="CurrentLineNumber" foreground="#84898c" bold="true"/>
  <style name="SearchResult" background="#1c3657"/>
  <style name="Parentheses" background="#2a343a" />
  <style name="ParenthesesMismatch" background="#c59820" />

  <!-- Selection whilst searching in it -->
  <style name="SearchScope" foreground="#b5d8f6" background="#3f4944"/>

  <!-- word (symbol) under cursor: background - color of marking frame, foreground - ignored -->
  <style name="Occurrences" background="#3f4944"/>
  <style name="Occurrences.Rename" background="#84898c"/>
  <!-- unused variable: foreground - color of underlining -->
  <style name="Occurrences.Unused" foreground="#43820d"/>

  <!-- language primitives -->
  <style name="Number" foreground="#43820d"/>
  <style name="String" foreground="#237986"/>
  <style name="Keyword" foreground="#c59820"/>
  <style name="Operator" foreground="#9ea7a6"/>
  <style name="Preprocessor" foreground="#484d79"/>
  <style name="Label" foreground="#2a5491"/>

  <!-- types, classes -->
  <style name="Type" foreground="#a03b1e"/>
  <style name="PrimitiveType" foreground="#c59820"/>

  <!-- functions, methods -->
  <style name="Function" foreground="#484d79"/>
  <style name="VirtualMethod" foreground="#484d79" italic="true"/>

  <!-- variables -->
  <style name="Field" foreground="#a7cfa3"/>
  <style name="Local" foreground="#9ea7a6"/>
  <style name="Global" foreground="#9ea7a6"/>
  <style name="Static" foreground="#9ea7a6"/>
  <style name="JsScopeVar" foreground="#9ea7a6" italic="true"/>
  <style name="JsImportVar" foreground="#9ea7a6" italic="true"/>
  <style name="JsGlobalVar" foreground="#9ea7a6" italic="true"/>

  <!-- whitespace -->
  <style name="VisualWhitespace" foreground="#2a343a"/>

  <!-- comments -->
  <style name="Comment" foreground="#3f4944"/>
  <style name="DisabledCode" foreground="#3f4944"/>
  <style name="Doxygen.Comment" foreground="#3f4944"/>
  <style name="Doxygen.Tag" foreground="#3f4944"/>

  <!-- QML -->
  <style name="QmlTypeId" foreground="#c59820"/>
  <style name="Binding" foreground="#2a5491"/>
  <style name="QmlExternalId" foreground="#484d79" italic="true"/>
  <style name="QmlExternalObjectProperty" foreground="#484d79" italic="true"/>
  <style name="QmlLocalId" italic="true"/>
  <style name="QmlRootObjectProperty" italic="true"/>
  <style name="QmlScopeObjectProperty" italic="true"/>
  <style name="QmlStateName" italic="true"/>

  <!-- inline diff -->
  <style name="DiffFile" foreground="#c59820"/>
  <style name="DiffLocation" foreground="#484d79"/>
  <style name="AddedLine" foreground="#237986"/>
  <style name="RemovedLine" foreground="#a03b1e"/>
  <style name="LogChangeLine" foreground="#2a5491"/>

  <!-- side-by-side diff -->
  <style name="DiffFileLine" foreground="#c59820"/>
  <style name="DiffContextLine" foreground="#484d79"/>
  <style name="DiffSourceLine" foreground="#237986"/>
  <style name="DiffSourceChar" foreground="#a03b1e" background="#1c3657"/>
  <style name="DiffDestLine" foreground="#237986"/>
  <style name="DiffDestChar" foreground="#a03b1e" background="#1c3657"/>

  <!-- errors, warnings -->
  <style name="Error" underlineColor="#2a5491" underlineStyle="SingleUnderline"/>
  <style name="ErrorContext" underlineColor="#2a5491" underlineStyle="DotLine"/>
  <style name="Warning" underlineColor="#a03b1e" underlineStyle="SingleUnderline"/>
  <style name="WarningContext" underlineColor="#a03b1e" underlineStyle="DotLine"/>
</style-scheme>
