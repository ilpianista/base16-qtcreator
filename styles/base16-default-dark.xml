<?xml version="1.0" encoding="UTF-8"?>
<style-scheme version="1.0" name="Base16 Default Dark">
  <!--
  base16-qtcreator (https://github.com/ilpianista/base16-qtcreator)
  by Chris Kempson (http://chriskempson.com)
  Default Dark scheme by Chris Kempson (http://chriskempson.com)
  -->

  <!-- main colors, skipping one of attributes (backgroud/foreground) will use color from here -->
  <style name="Text" foreground="#d8d8d8" background="#181818"/>

  <!-- it will be underlined by default -->
  <style name="Link"/>

  <!-- selection, current line, search, matching brackets -->
  <style name="Selection" background="#b8b8b8"/>
  <style name="CurrentLine" background="#585858"/>
  <style name="LineNumber" foreground="#585858"/>
  <style name="CurrentLineNumber" foreground="#b8b8b8" bold="true"/>
  <style name="SearchResult" background="#282828"/>
  <style name="Parentheses" background="#383838" />
  <style name="ParenthesesMismatch" background="#ba8baf" />

  <!-- Selection whilst searching in it -->
  <style name="SearchScope" foreground="#f8f8f8" background="#585858"/>

  <!-- word (symbol) under cursor: background - color of marking frame, foreground - ignored -->
  <style name="Occurrences" background="#585858"/>
  <style name="Occurrences.Rename" background="#b8b8b8"/>
  <!-- unused variable: foreground - color of underlining -->
  <style name="Occurrences.Unused" foreground="#dc9656"/>

  <!-- language primitives -->
  <style name="Number" foreground="#dc9656"/>
  <style name="String" foreground="#a1b56c"/>
  <style name="Keyword" foreground="#ba8baf"/>
  <style name="Operator" foreground="#d8d8d8"/>
  <style name="Preprocessor" foreground="#7cafc2"/>
  <style name="Label" foreground="#ab4642"/>

  <!-- types, classes -->
  <style name="Type" foreground="#f7ca88"/>
  <style name="PrimitiveType" foreground="#ba8baf"/>

  <!-- functions, methods -->
  <style name="Function" foreground="#7cafc2"/>
  <style name="VirtualMethod" foreground="#7cafc2" italic="true"/>

  <!-- variables -->
  <style name="Field" foreground="#e8e8e8"/>
  <style name="Local" foreground="#d8d8d8"/>
  <style name="Global" foreground="#d8d8d8"/>
  <style name="Static" foreground="#d8d8d8"/>
  <style name="JsScopeVar" foreground="#d8d8d8" italic="true"/>
  <style name="JsImportVar" foreground="#d8d8d8" italic="true"/>
  <style name="JsGlobalVar" foreground="#d8d8d8" italic="true"/>

  <!-- whitespace -->
  <style name="VisualWhitespace" foreground="#383838"/>

  <!-- comments -->
  <style name="Comment" foreground="#585858"/>
  <style name="DisabledCode" foreground="#585858"/>
  <style name="Doxygen.Comment" foreground="#585858"/>
  <style name="Doxygen.Tag" foreground="#585858"/>

  <!-- QML -->
  <style name="QmlTypeId" foreground="#ba8baf"/>
  <style name="Binding" foreground="#ab4642"/>
  <style name="QmlExternalId" foreground="#7cafc2" italic="true"/>
  <style name="QmlExternalObjectProperty" foreground="#7cafc2" italic="true"/>
  <style name="QmlLocalId" italic="true"/>
  <style name="QmlRootObjectProperty" italic="true"/>
  <style name="QmlScopeObjectProperty" italic="true"/>
  <style name="QmlStateName" italic="true"/>

  <!-- inline diff -->
  <style name="DiffFile" foreground="#ba8baf"/>
  <style name="DiffLocation" foreground="#7cafc2"/>
  <style name="AddedLine" foreground="#a1b56c"/>
  <style name="RemovedLine" foreground="#f7ca88"/>
  <style name="LogChangeLine" foreground="#ab4642"/>

  <!-- side-by-side diff -->
  <style name="DiffFileLine" foreground="#ba8baf"/>
  <style name="DiffContextLine" foreground="#7cafc2"/>
  <style name="DiffSourceLine" foreground="#a1b56c"/>
  <style name="DiffSourceChar" foreground="#f7ca88" background="#282828"/>
  <style name="DiffDestLine" foreground="#a1b56c"/>
  <style name="DiffDestChar" foreground="#f7ca88" background="#282828"/>

  <!-- errors, warnings -->
  <style name="Error" underlineColor="#ab4642" underlineStyle="SingleUnderline"/>
  <style name="ErrorContext" underlineColor="#ab4642" underlineStyle="DotLine"/>
  <style name="Warning" underlineColor="#f7ca88" underlineStyle="SingleUnderline"/>
  <style name="WarningContext" underlineColor="#f7ca88" underlineStyle="DotLine"/>
</style-scheme>
