<?xml version="1.0" encoding="UTF-8"?>
<style-scheme version="1.0" name="Base16 Materia">
  <!--
  base16-qtcreator (https://github.com/ilpianista/base16-qtcreator)
  by Chris Kempson (http://chriskempson.com)
  Materia scheme by Defman21
  -->

  <!-- main colors, skipping one of attributes (backgroud/foreground) will use color from here -->
  <style name="Text" foreground="#CDD3DE" background="#263238"/>

  <!-- it will be underlined by default -->
  <style name="Link"/>

  <!-- selection, current line, search, matching brackets -->
  <style name="Selection" background="#C9CCD3"/>
  <style name="CurrentLine" background="#707880"/>
  <style name="LineNumber" foreground="#707880"/>
  <style name="CurrentLineNumber" foreground="#C9CCD3" bold="true"/>
  <style name="SearchResult" background="#2C393F"/>
  <style name="Parentheses" background="#37474F" />
  <style name="ParenthesesMismatch" background="#82AAFF" />

  <!-- Selection whilst searching in it -->
  <style name="SearchScope" foreground="#FFFFFF" background="#707880"/>

  <!-- word (symbol) under cursor: background - color of marking frame, foreground - ignored -->
  <style name="Occurrences" background="#707880"/>
  <style name="Occurrences.Rename" background="#C9CCD3"/>
  <!-- unused variable: foreground - color of underlining -->
  <style name="Occurrences.Unused" foreground="#EA9560"/>

  <!-- language primitives -->
  <style name="Number" foreground="#EA9560"/>
  <style name="String" foreground="#8BD649"/>
  <style name="Keyword" foreground="#82AAFF"/>
  <style name="Operator" foreground="#CDD3DE"/>
  <style name="Preprocessor" foreground="#89DDFF"/>
  <style name="Label" foreground="#EC5F67"/>

  <!-- types, classes -->
  <style name="Type" foreground="#FFCC00"/>
  <style name="PrimitiveType" foreground="#82AAFF"/>

  <!-- functions, methods -->
  <style name="Function" foreground="#89DDFF"/>
  <style name="VirtualMethod" foreground="#89DDFF" italic="true"/>

  <!-- variables -->
  <style name="Field" foreground="#D5DBE5"/>
  <style name="Local" foreground="#CDD3DE"/>
  <style name="Global" foreground="#CDD3DE"/>
  <style name="Static" foreground="#CDD3DE"/>
  <style name="JsScopeVar" foreground="#CDD3DE" italic="true"/>
  <style name="JsImportVar" foreground="#CDD3DE" italic="true"/>
  <style name="JsGlobalVar" foreground="#CDD3DE" italic="true"/>

  <!-- whitespace -->
  <style name="VisualWhitespace" foreground="#37474F"/>

  <!-- comments -->
  <style name="Comment" foreground="#707880"/>
  <style name="DisabledCode" foreground="#707880"/>
  <style name="Doxygen.Comment" foreground="#707880"/>
  <style name="Doxygen.Tag" foreground="#707880"/>

  <!-- QML -->
  <style name="QmlTypeId" foreground="#82AAFF"/>
  <style name="Binding" foreground="#EC5F67"/>
  <style name="QmlExternalId" foreground="#89DDFF" italic="true"/>
  <style name="QmlExternalObjectProperty" foreground="#89DDFF" italic="true"/>
  <style name="QmlLocalId" italic="true"/>
  <style name="QmlRootObjectProperty" italic="true"/>
  <style name="QmlScopeObjectProperty" italic="true"/>
  <style name="QmlStateName" italic="true"/>

  <!-- inline diff -->
  <style name="DiffFile" foreground="#82AAFF"/>
  <style name="DiffLocation" foreground="#89DDFF"/>
  <style name="AddedLine" foreground="#8BD649"/>
  <style name="RemovedLine" foreground="#FFCC00"/>
  <style name="LogChangeLine" foreground="#EC5F67"/>

  <!-- side-by-side diff -->
  <style name="DiffFileLine" foreground="#82AAFF"/>
  <style name="DiffContextLine" foreground="#89DDFF"/>
  <style name="DiffSourceLine" foreground="#8BD649"/>
  <style name="DiffSourceChar" foreground="#FFCC00" background="#2C393F"/>
  <style name="DiffDestLine" foreground="#8BD649"/>
  <style name="DiffDestChar" foreground="#FFCC00" background="#2C393F"/>

  <!-- errors, warnings -->
  <style name="Error" underlineColor="#EC5F67" underlineStyle="SingleUnderline"/>
  <style name="ErrorContext" underlineColor="#EC5F67" underlineStyle="DotLine"/>
  <style name="Warning" underlineColor="#FFCC00" underlineStyle="SingleUnderline"/>
  <style name="WarningContext" underlineColor="#FFCC00" underlineStyle="DotLine"/>
</style-scheme>
