<?xml version="1.0" encoding="UTF-8"?>
<style-scheme version="1.0" name="Base16 Grayscale Light">
  <!--
  base16-qtcreator (https://github.com/ilpianista/base16-qtcreator)
  by Chris Kempson (http://chriskempson.com)
  Grayscale Light scheme by Alexandre Gavioli (https://github.com/Alexx2/)
  -->

  <!-- main colors, skipping one of attributes (backgroud/foreground) will use color from here -->
  <style name="Text" foreground="#464646" background="#f7f7f7"/>

  <!-- it will be underlined by default -->
  <style name="Link"/>

  <!-- selection, current line, search, matching brackets -->
  <style name="Selection" background="#525252"/>
  <style name="CurrentLine" background="#ababab"/>
  <style name="LineNumber" foreground="#ababab"/>
  <style name="CurrentLineNumber" foreground="#525252" bold="true"/>
  <style name="SearchResult" background="#e3e3e3"/>
  <style name="Parentheses" background="#b9b9b9" />
  <style name="ParenthesesMismatch" background="#747474" />

  <!-- Selection whilst searching in it -->
  <style name="SearchScope" foreground="#101010" background="#ababab"/>

  <!-- word (symbol) under cursor: background - color of marking frame, foreground - ignored -->
  <style name="Occurrences" background="#ababab"/>
  <style name="Occurrences.Rename" background="#525252"/>
  <!-- unused variable: foreground - color of underlining -->
  <style name="Occurrences.Unused" foreground="#999999"/>

  <!-- language primitives -->
  <style name="Number" foreground="#999999"/>
  <style name="String" foreground="#8e8e8e"/>
  <style name="Keyword" foreground="#747474"/>
  <style name="Operator" foreground="#464646"/>
  <style name="Preprocessor" foreground="#686868"/>
  <style name="Label" foreground="#7c7c7c"/>

  <!-- types, classes -->
  <style name="Type" foreground="#a0a0a0"/>
  <style name="PrimitiveType" foreground="#747474"/>

  <!-- functions, methods -->
  <style name="Function" foreground="#686868"/>
  <style name="VirtualMethod" foreground="#686868" italic="true"/>

  <!-- variables -->
  <style name="Field" foreground="#252525"/>
  <style name="Local" foreground="#464646"/>
  <style name="Global" foreground="#464646"/>
  <style name="Static" foreground="#464646"/>
  <style name="JsScopeVar" foreground="#464646" italic="true"/>
  <style name="JsImportVar" foreground="#464646" italic="true"/>
  <style name="JsGlobalVar" foreground="#464646" italic="true"/>

  <!-- whitespace -->
  <style name="VisualWhitespace" foreground="#b9b9b9"/>

  <!-- comments -->
  <style name="Comment" foreground="#ababab"/>
  <style name="DisabledCode" foreground="#ababab"/>
  <style name="Doxygen.Comment" foreground="#ababab"/>
  <style name="Doxygen.Tag" foreground="#ababab"/>

  <!-- QML -->
  <style name="QmlTypeId" foreground="#747474"/>
  <style name="Binding" foreground="#7c7c7c"/>
  <style name="QmlExternalId" foreground="#686868" italic="true"/>
  <style name="QmlExternalObjectProperty" foreground="#686868" italic="true"/>
  <style name="QmlLocalId" italic="true"/>
  <style name="QmlRootObjectProperty" italic="true"/>
  <style name="QmlScopeObjectProperty" italic="true"/>
  <style name="QmlStateName" italic="true"/>

  <!-- inline diff -->
  <style name="DiffFile" foreground="#747474"/>
  <style name="DiffLocation" foreground="#686868"/>
  <style name="AddedLine" foreground="#8e8e8e"/>
  <style name="RemovedLine" foreground="#a0a0a0"/>
  <style name="LogChangeLine" foreground="#7c7c7c"/>

  <!-- side-by-side diff -->
  <style name="DiffFileLine" foreground="#747474"/>
  <style name="DiffContextLine" foreground="#686868"/>
  <style name="DiffSourceLine" foreground="#8e8e8e"/>
  <style name="DiffSourceChar" foreground="#a0a0a0" background="#e3e3e3"/>
  <style name="DiffDestLine" foreground="#8e8e8e"/>
  <style name="DiffDestChar" foreground="#a0a0a0" background="#e3e3e3"/>

  <!-- errors, warnings -->
  <style name="Error" underlineColor="#7c7c7c" underlineStyle="SingleUnderline"/>
  <style name="ErrorContext" underlineColor="#7c7c7c" underlineStyle="DotLine"/>
  <style name="Warning" underlineColor="#a0a0a0" underlineStyle="SingleUnderline"/>
  <style name="WarningContext" underlineColor="#a0a0a0" underlineStyle="DotLine"/>
</style-scheme>
