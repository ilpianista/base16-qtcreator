<?xml version="1.0" encoding="UTF-8"?>
<style-scheme version="1.0" name="Base16 Spacemacs">
  <!--
  base16-qtcreator (https://github.com/ilpianista/base16-qtcreator)
  by Chris Kempson (http://chriskempson.com)
  Spacemacs scheme by Nasser Alshammari (https://github.com/nashamri/spacemacs-theme)
  -->

  <!-- main colors, skipping one of attributes (backgroud/foreground) will use color from here -->
  <style name="Text" foreground="#a3a3a3" background="#1f2022"/>

  <!-- it will be underlined by default -->
  <style name="Link"/>

  <!-- selection, current line, search, matching brackets -->
  <style name="Selection" background="#b8b8b8"/>
  <style name="CurrentLine" background="#585858"/>
  <style name="LineNumber" foreground="#585858"/>
  <style name="CurrentLineNumber" foreground="#b8b8b8" bold="true"/>
  <style name="SearchResult" background="#282828"/>
  <style name="Parentheses" background="#444155" />
  <style name="ParenthesesMismatch" background="#a31db1" />

  <!-- Selection whilst searching in it -->
  <style name="SearchScope" foreground="#f8f8f8" background="#585858"/>

  <!-- word (symbol) under cursor: background - color of marking frame, foreground - ignored -->
  <style name="Occurrences" background="#585858"/>
  <style name="Occurrences.Rename" background="#b8b8b8"/>
  <!-- unused variable: foreground - color of underlining -->
  <style name="Occurrences.Unused" foreground="#ffa500"/>

  <!-- language primitives -->
  <style name="Number" foreground="#ffa500"/>
  <style name="String" foreground="#67b11d"/>
  <style name="Keyword" foreground="#a31db1"/>
  <style name="Operator" foreground="#a3a3a3"/>
  <style name="Preprocessor" foreground="#4f97d7"/>
  <style name="Label" foreground="#f2241f"/>

  <!-- types, classes -->
  <style name="Type" foreground="#b1951d"/>
  <style name="PrimitiveType" foreground="#a31db1"/>

  <!-- functions, methods -->
  <style name="Function" foreground="#4f97d7"/>
  <style name="VirtualMethod" foreground="#4f97d7" italic="true"/>

  <!-- variables -->
  <style name="Field" foreground="#e8e8e8"/>
  <style name="Local" foreground="#a3a3a3"/>
  <style name="Global" foreground="#a3a3a3"/>
  <style name="Static" foreground="#a3a3a3"/>
  <style name="JsScopeVar" foreground="#a3a3a3" italic="true"/>
  <style name="JsImportVar" foreground="#a3a3a3" italic="true"/>
  <style name="JsGlobalVar" foreground="#a3a3a3" italic="true"/>

  <!-- whitespace -->
  <style name="VisualWhitespace" foreground="#444155"/>

  <!-- comments -->
  <style name="Comment" foreground="#585858"/>
  <style name="DisabledCode" foreground="#585858"/>
  <style name="Doxygen.Comment" foreground="#585858"/>
  <style name="Doxygen.Tag" foreground="#585858"/>

  <!-- QML -->
  <style name="QmlTypeId" foreground="#a31db1"/>
  <style name="Binding" foreground="#f2241f"/>
  <style name="QmlExternalId" foreground="#4f97d7" italic="true"/>
  <style name="QmlExternalObjectProperty" foreground="#4f97d7" italic="true"/>
  <style name="QmlLocalId" italic="true"/>
  <style name="QmlRootObjectProperty" italic="true"/>
  <style name="QmlScopeObjectProperty" italic="true"/>
  <style name="QmlStateName" italic="true"/>

  <!-- inline diff -->
  <style name="DiffFile" foreground="#a31db1"/>
  <style name="DiffLocation" foreground="#4f97d7"/>
  <style name="AddedLine" foreground="#67b11d"/>
  <style name="RemovedLine" foreground="#b1951d"/>
  <style name="LogChangeLine" foreground="#f2241f"/>

  <!-- side-by-side diff -->
  <style name="DiffFileLine" foreground="#a31db1"/>
  <style name="DiffContextLine" foreground="#4f97d7"/>
  <style name="DiffSourceLine" foreground="#67b11d"/>
  <style name="DiffSourceChar" foreground="#b1951d" background="#282828"/>
  <style name="DiffDestLine" foreground="#67b11d"/>
  <style name="DiffDestChar" foreground="#b1951d" background="#282828"/>

  <!-- errors, warnings -->
  <style name="Error" underlineColor="#f2241f" underlineStyle="SingleUnderline"/>
  <style name="ErrorContext" underlineColor="#f2241f" underlineStyle="DotLine"/>
  <style name="Warning" underlineColor="#b1951d" underlineStyle="SingleUnderline"/>
  <style name="WarningContext" underlineColor="#b1951d" underlineStyle="DotLine"/>
</style-scheme>
